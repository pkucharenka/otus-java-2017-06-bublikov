<?xml version="1.0" encoding="ISO-8859-1"?>

<web-app>

    <display-name>L13</display-name>
    <description>DBService_IoC</description>

    <servlet>
        <servlet-name>adminServlet</servlet-name>
        <servlet-class>ru.otus.bvd.servlet.AdminServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>ru.otus.bvd.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>shutdownServlet</servlet-name>
        <servlet-class>ru.otus.bvd.servlet.ShutdownServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>adminServlet</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>shutdownServlet</servlet-name>
        <url-pattern>/shutdown</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

</web-app>